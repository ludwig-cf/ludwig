##############################################################################
#
#  Colloid velocity autocorrelation test (no noise).
#
##############################################################################

N_cycles 40

##############################################################################
#
#  System and MPI
# 
##############################################################################

size 64_64_64
grid 2_2_2
reduced_halo no

##############################################################################
#
#  Fluid parameters
#
##############################################################################

free_energy none

viscosity 0.1
viscosity_bulk 0.1

isothermal_fluctuations off
temperature 0.00002133333

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init     input_one

colloid_one_a0   2.3
colloid_one_ah   2.3
colloid_one_r    32.0_32.0_32.0
colloid_one_v    0.043478261_0.0_0.0

colloid_gravity  0.0_0.0_0.0

###############################################################################
#
#  Periodic conditions / boundaries
#
###############################################################################

boundary_walls_on no
periodicity 1_1_1

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics 40
config_at_end no

colloid_io_freq 1000

###############################################################################
#
#  Miscellaneous
#
###############################################################################

random_seed 8361235
