##############################################################################
#
#  LC droplet free energy smoke test (Nematic)
#
##############################################################################

N_start  0
N_cycles 10

##############################################################################
#
#  System and MPI
# 
##############################################################################

size 32_32_32
grid 1_1_1
periodicity 1_1_1

##############################################################################
#
#  Fluid parameters
#  
##############################################################################

fluid_rho0 1.0

viscosity 0.1
viscosity_bulk 0.1

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy lc_droplet

fd_advection_scheme_order 3
fd_gradient_calculation 3d_7pt_fluid
fd_force_divergence 1

###############################################################################
#
#  Symmetric / Brazovskii
#
###############################################################################

A -0.0625
B 0.0625
K 0.053
C 0.0

mobility 0.05

noise 0.05
phi0 0.0
phi_initialisation    drop
phi_init_drop_radius 9.2

###############################################################################
#
#  Blue Phase free energy
#
###############################################################################

lc_a0      0.1
lc_gamma   3.0
lc_q0      0.0
lc_kappa0  0.01
lc_kappa1  0.01
lc_xi      0.7

lc_Gamma   0.3
lc_noise   0
lc_active_zeta 0.0

lc_q_initialisation nematic
lc_q_init_amplitude 0.2
lc_init_redshift 1.0
lc_redshift_update 0
lc_init_nematic 1.0_0.0_0.0

lc_anchoring_method none

###############################################################################
#
#  liquid crystal droplet
#
###############################################################################

lc_droplet_gamma 2.586
lc_droplet_delta 0.25
lc_droplet_W -0.03

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init        none

###############################################################################
#
#  Walls / boundaries
#
###############################################################################

boundary_walls 0_0_0

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics 10
config_at_end no

###############################################################################
#
#  Miscellaneous
#
###############################################################################

random_seed 8361235
