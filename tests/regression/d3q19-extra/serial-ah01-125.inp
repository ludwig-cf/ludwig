##############################################################################
#
#  Calibration ah: input radius a0 = 1.25 eta = 1/6
#  Key/value "calibration on" requests the calibration
#
##############################################################################

N_cycles 10000

##############################################################################
#
#  System and MPI
# 
##############################################################################

size 16_16_16
reduced_halo no

##############################################################################
#
#  Fluid parameters
#
##############################################################################

isothermal_fluctuations off
ghost_modes off

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy none

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init        input_one

colloid_one_a0   1.25
colloid_one_ah   1.25
colloid_one_r    6.1_6.1_6.1
colloid_one_v    0.0_0.0_0.0

colloid_gravity  0.0_0.0_0.0

###############################################################################
#
#  Periodic conditions / boundaries
#
###############################################################################

boundary_walls_on no
periodicity 1_1_1

###############################################################################
#
#  Output frequency and type
#
###############################################################################

calibration on

freq_statistics 10000
freq_measure    10000000
freq_config     10000000
colloid_io_freq 10000000
config_at_end no

###############################################################################
#
#  Miscellaneous
#
###############################################################################

random_seed 8361235

