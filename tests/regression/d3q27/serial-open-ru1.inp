##############################################################################
#
#  Open boundary conditions rhou
#  Smoke test
#
#  3-case in X. System is at rest and should not gain or lose mass.
#
##############################################################################

N_cycles 1

##############################################################################
#
#  System and MPI
# 
##############################################################################

size 24_12_12
periodicity 0_0_0

##############################################################################
#
#  Fluid parameters
#  
##############################################################################

viscosity 0.1

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy none

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init        none

###############################################################################
#
#  Walls / boundaries
#
###############################################################################

boundary_walls          0_1_1
boundary_speed_bottom   0.0
boundary_speed_top      0.0

lb_bc_open              yes
lb_bc_inflow_type       rhou
lb_bc_inflow_rhou_u0    0.0_0.0_0.0

lb_bc_outflow_type      rhou
lb_bc_outflow_rhou_rho0 1.0

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics         1
config_at_end           no
