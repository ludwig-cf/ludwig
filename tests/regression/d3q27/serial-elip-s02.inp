##############################################################################
#
#  serial-elip-s02.inp
#
#  Another very simple confiuration where a prolate spheroid
#  sediments along a short axis.
#
##############################################################################

N_cycles 10

##############################################################################
#
#  System and MPI
# 
##############################################################################

size 32_32_32

##############################################################################
#
#  Fluid parameters
#
##############################################################################

isothermal_fluctuations off

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy none

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init        input_one

colloid_one_shape   ellipsoid
colloid_one_elabc   7.5_2.5_2.5
colloid_one_euler   0.0_0.0_0.0
colloid_one_r       6.1_6.1_6.1
colloid_one_v       0.0_0.0_0.0


# Sediment perpendicular to long axis ...
colloid_gravity     0.0_0.0_0.00001

###############################################################################
#
#  Periodic conditions / boundaries
#
###############################################################################

periodicity 1_1_1

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics  10
config_at_end    no

###############################################################################
#
#  Miscellaneous
#
###############################################################################

random_seed 8361235

