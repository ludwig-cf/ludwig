##############################################################################
#
#  serial-elip-s05.inp
#
#  Ellipsoidal particle with initial orientation set by means of
#  Euler angles.
#
##############################################################################

N_cycles 10

##############################################################################
#
#  System and MPI
# 
##############################################################################

size 32_32_32

##############################################################################
#
#  Fluid parameters
#
##############################################################################

isothermal_fluctuations off

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy none

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init        input_one

colloid_one_shape   ellipsoid
colloid_one_elabc   7.5_2.5_2.5
colloid_one_euler   10.0_20.0_30.0
colloid_one_r       6.1_6.1_6.1
colloid_one_v       0.0_0.0_0.0

# Sediement in x-direction
colloid_gravity     0.00001_0.0_0.0


###############################################################################
#
#  Periodic conditions / boundaries
#
###############################################################################

periodicity 1_1_1

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics  10
config_at_end    no

###############################################################################
#
#  Miscellaneous
#
###############################################################################

random_seed 8361235

