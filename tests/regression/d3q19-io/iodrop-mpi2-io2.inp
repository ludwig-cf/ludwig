##############################################################################
#
#  Symmetric drop. I/O run 0->10 steps and write restart (one file).
#
##############################################################################

##############################################################################
#
#  Run duration
#
###############################################################################

N_start  0
N_cycles 10

##############################################################################
#
#  System
#
##############################################################################

size 32_32_32
grid 1_2_1

##############################################################################
#
#  Fluid parameters
#
##############################################################################

viscosity 0.00625

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy symmetric

A -0.00625
B 0.00625
K 0.004
C 0.0

phi0 0.0
phi_initialisation  drop
phi_init_drop_radius 8.0
mobility 1.25

fd_gradient_calculation 3d_27pt_fluid
fd_advection_scheme_order 2

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init        no_colloids

###############################################################################
#
#  Periodic conditions / boundaries
#
###############################################################################

boundary_walls_on no
periodicity 1_1_1

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics 10

config_at_end yes

###############################################################################
#
#  Miscellaneous
#
#  random_seed  +ve integer is the random number generator seed
#
###############################################################################

random_seed 8361235
