##############################################################################
#
#  Symmetric drop I/O test. Run 0->20 steps as reference.
#  Two MPI tasks with decomposition not in x-direction.
#  The y-decomposition  should not "pass by accident".
#
##############################################################################

##############################################################################
#
#  Run duration
#
###############################################################################

N_start  0
N_cycles 20

##############################################################################
#
#  System
#
##############################################################################

size 32_32_32
grid 1_2_1

##############################################################################
#
#  Fluid parameters
#
##############################################################################

viscosity 0.00625

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy symmetric

A -0.00625
B 0.00625
K 0.004

phi0 0.0
phi_initialisation  drop
phi_init_drop_radius 8.0
mobility 1.25

fd_gradient_calculation 3d_27pt_fluid
fd_advection_scheme_order 2

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init        no_colloids

###############################################################################
#
#  Periodic conditions / boundaries
#
###############################################################################

periodicity 1_1_1

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics 10

config_at_end no

###############################################################################
#
#  Miscellaneous
#
#  random_seed  +ve integer is the random number generator seed
#
###############################################################################

random_seed 8361235
