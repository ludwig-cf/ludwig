##############################################################################
#
#  Active nematic 2-d smoke test (laminar regime)
#
#  This tests the active initial conditions "q2d"
#
#  If you run for e.g., 200,000 steps, should see simple flow
#  pattern.
#
##############################################################################

N_cycles 20
N_start 0

##############################################################################
#
#  System and MPI
# 
##############################################################################

size 64_64_1
grid 1_1_1
reduced_halo no

##############################################################################
#
#  Fluid parameters
#
##############################################################################

viscosity 1.3333

isothermal_fluctuations off
temperature 0.00002133333

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy lc_blue_phase

fd_advection_scheme_order 1
fd_gradient_calculation 3d_7pt_fluid

lc_a0      1.0
lc_gamma   3.0
lc_q0      0.0
lc_kappa0  0.04
lc_kappa1  0.04
lc_xi      0.7

lc_Gamma   0.3375

lc_activity     yes
lc_active_zeta1 0.005

lc_q_initialisation active_nematic_q2d_y
lc_q_init_amplitude 0.333333333333333
lc_init_redshift 1.0
lc_init_nematic 0.0_1.0_0.0

lc_anchoring_method none

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init     none

###############################################################################
#
#  Periodic conditions / boundaries
#
###############################################################################

boundary_walls_on no
periodicity 1_1_1
boundary_walls 0_0_0

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics 20
config_at_end no

###############################################################################
#
#  Miscellaneous
#
###############################################################################

random_seed 8361235
