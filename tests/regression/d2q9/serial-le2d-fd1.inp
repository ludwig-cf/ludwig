##############################################################################
#
#  Lees Edwards + symmetric 2d smoke test
#
##############################################################################

##############################################################################
#
#  Run duration
#
###############################################################################

N_cycles 100

##############################################################################
#
#  System
#
##############################################################################

size 64_64_1

##############################################################################
#
#  Fluid parameters
#
##############################################################################

viscosity 0.1

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy      symmetric

symmetric_a      -0.0625
symmetric_b       0.0625
symmetric_kappa   0.04

phi0              0.0
mobility          0.15

phi_initialisation        spinodal
fd_gradient_calculation   2d_5pt_fluid
fd_advection_scheme_order 3

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init        no_colloids

###############################################################################
#
#  Periodic conditions / boundaries
#
###############################################################################

periodicity 1_1_1

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics 100
config_at_end no

###############################################################################
#
#  Lees-Edwards planes
#
###############################################################################

N_LE_plane 2
LE_plane_vel 0.05
LE_init_profile 1

###############################################################################
#
#  Miscellaneous
#
###############################################################################

random_seed 7361237

