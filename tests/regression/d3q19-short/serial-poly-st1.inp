##############################################################################
#
#  Multiple polymers initial input. You need to use /util/multi_poly_init.c
#
#  to generate the initial input files. Monomers are subgrid particles.      
#
#  smoke test
#
##############################################################################

N_start  0
N_cycles 100

##############################################################################
#
#  System and MPI
# 
##############################################################################

size 18_18_18
grid 2_2_1
reduced_halo no

##############################################################################
#
#  Fluid parameters
#
##############################################################################

fluid_rho0     0.864
viscosity      0.024192
viscosity_bulk 0.024192

isothermal_fluctuations on
temperature 0.00012

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy none

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init     from_file 

soft_sphere_on 1
soft_sphere_epsilon 0.0021
soft_sphere_sigma 0.6
soft_sphere_nu 1.0
soft_sphere_cutoff 1.2

bond_fene_on 1
bond_fene_k 0.002
bond_fene_r0 2.0

###############################################################################
#
#  Periodic conditions / boundaries
#
###############################################################################

boundary_walls_on no
periodicity 1_1_1

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics 100
config_at_end   no

###############################################################################
#
#  Miscellaneous
#
###############################################################################

random_seed 8361235
