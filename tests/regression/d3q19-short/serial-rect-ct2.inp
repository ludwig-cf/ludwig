#############################################################################
#
#  serial-rect-ct2.inp
#
#  Rectangular capillary.
#
#  As for serial-rect-ct2.inp but using the slip active implementation.
#  (But still no-slip.) The result should be the same.
#
##############################################################################

N_cycles 100
N_start 0

##############################################################################
#
#  System and MPI
#
##############################################################################

size 1_62_30
grid 1_1_1
reduced_halo no

##############################################################################
#
#  Fluid parameters
#
##############################################################################

force 0.00001_0_0
viscosity 0.1666
isothermal_fluctuations off

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy none

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init        no_colloids

###############################################################################
#
#  Periodic conditions / boundaries
#
###############################################################################

boundary_walls_on yes
periodicity       1_0_0
boundary_walls    0_1_1

boundary_walls_slip_active yes

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics           100
stats_vel_print_vol_flux  yes

config_at_end no
