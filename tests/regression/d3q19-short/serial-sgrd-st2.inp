##############################################################################
#
#  Subgrid particle smoke test.
#
#  Two particles under gravity.
#
##############################################################################

N_cycles 2000

##############################################################################
#
#  System and MPI
# 
##############################################################################

size 16_16_16
reduced_halo no

##############################################################################
#
#  Fluid parameters
#
##############################################################################

isothermal_fluctuations off
ghost_modes off

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy none

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init        input_two

colloid_one_type    subgrid
colloid_one_a0      0.10
colloid_one_ah      0.20
colloid_one_r       6.1_6.1_6.1

colloid_two_type    subgrid
colloid_two_a0      0.10
colloid_two_ah      0.20
colloid_two_r       6.1_6.1_3.1

colloid_gravity  0.0_0.0_0.00001

###############################################################################
#
#  Periodic conditions / boundaries
#
###############################################################################

boundary_walls_on no
periodicity 1_1_1

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics 2000
freq_measure    10000000
freq_config     10000000
colloid_io_freq 10000000
config_at_end no

###############################################################################
#
#  Miscellaneous
#
#  random_seed  +ve integer is the random number generator seed
#
###############################################################################

random_seed 8361235

