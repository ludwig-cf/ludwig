##############################################################################
#
#  Colloid pairwise interaction smoke test 
#  Soft-sphere with a large cut off.
#  The input file is the same as for the Yukawa.
#
##############################################################################

N_cycles 10

size 64_64_64
grid 4_1_1
reduced_halo no

##############################################################################
#
#  Fluid parameters
#
##############################################################################

viscosity 0.02

isothermal_fluctuations off
temperature 0.0002133333

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy none               

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_type        inactive
colloid_init        from_file

colloid_gravity  0.0_0.0_0.0

lubrication_on 0
soft_sphere_on 1
soft_sphere_epsilon 0.004
soft_sphere_sigma 1.0
soft_sphere_nu 1.0
soft_sphere_cutoff 2.25


###############################################################################
#
#  Periodic conditions / boundaries
#
###############################################################################

boundary_walls_on no
periodicity 1_1_1

###############################################################################
#
#  Input/Output frequency
#
###############################################################################

freq_statistics 10
config_at_end no

colloid_file_stub colloids-serial-pair-yk1
colloids_io_grid 1_1_1
colloid_io_format_input  ASCII_SERIAL

###############################################################################
#
#  Miscellaneous
#
#  random_seed  +ve integer is the random number generator seed
#
###############################################################################

random_seed 8361235
