##############################################################################
#
#  Fluctuations.
#
##############################################################################

N_cycles 200

##############################################################################
#
#  System and MPI
# 
##############################################################################

size 96_96_1
reduced_halo no

##############################################################################
#
#  Fluid parameters
#
##############################################################################

free_energy none

viscosity 0.1
viscosity_bulk 0.1

isothermal_fluctuations on
temperature 0.00002133333

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init     none

###############################################################################
#
#  Periodic conditions / boundaries
#
###############################################################################

boundary_walls_on no
periodicity 1_1_1

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics 200
config_at_end no

colloid_io_freq 1000

###############################################################################
#
#  Miscellaneous
#
###############################################################################

random_seed 8361235
